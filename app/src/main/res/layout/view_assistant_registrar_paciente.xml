<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.patient.controller_patient_RegistrarPaciente">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/view_assistant_registrarPaciente_btnback"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="regresar"
                app:srcCompat="@drawable/vectorasset_general_back"
                app:tint="#327AFF" />

            <TextView
                android:id="@+id/regpac_tv1"
                android:layout_width="205dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="Ingresar los siguientes datos"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/view_assistant_registrarPaciente_edtnombre"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:background="#EBEBEB"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint=" Nombre"
                android:inputType="textPersonName"
                android:maxLength="15" />

            <EditText
                android:id="@+id/view_assistant_registrarPaciente_edtApaterno"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:background="#EBEBEB"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint=" Apellido paterno"
                android:inputType="textPersonName"
                android:maxLength="15" />

            <EditText
                android:id="@+id/view_assistant_registrarPaciente_edtAmaterno"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:background="#EBEBEB"
                android:ems="10"
                android:hint="Apellido materno"
                android:inputType="textPersonName"
                android:maxLength="15" />

            <EditText
                android:id="@+id/view_assistant_registrarPaciente_email"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:background="#EBEBEB"
                android:ems="10"
                android:hint=" Correo electrónico"
                android:inputType="textEmailAddress"
                android:maxLength="256" />

            <EditText
                android:id="@+id/view_assistant_registrarPaciente_telefono"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:background="#EBEBEB"
                android:ems="10"
                android:hint=" +52"
                android:inputType="phone"
                android:maxLength="10" />

            <TextView
                android:id="@+id/regpac_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="Sexo"
                android:textColor="#000000"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/view_assistant_registrarPaciente_rbHombre"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#EBEBEB"
                    android:text=" Hombre" />

                <RadioButton
                    android:id="@+id/view_assistant_registrarPaciente_rbMujer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#EBEBEB"
                    android:text=" Mujer" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:background="#EBEBEB"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/view_assistant_registrarPaciente_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:background="#EBEBEB"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/view_assistant_registrarPaciente_confirmedPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirmar contraseña"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/view_assistant_registrarPaciente_btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/drawable_roundedbutton_general"
                android:backgroundTint="#306BA5"
                android:fontFamily="sans-serif"
                android:onClick="Registrar"
                android:text="Registrar cuenta"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/regpac_tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Recuerde seguir los lineamientos de registro."
                    android:textColor="#7D7D7D" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
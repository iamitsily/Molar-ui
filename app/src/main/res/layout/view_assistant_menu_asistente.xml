<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv1_saludo"
        android:layout_width="49dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Hola!"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nombreAsistente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:text="[Nombre del asistente]"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="181dp"
        android:layout_height="142dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="4dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <View
            android:id="@+id/view_empleadosTotales"
            android:layout_width="153dp"
            android:layout_height="135dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/drawable_assistant_menu_asistente_view2" />

        <Button
            android:id="@+id/btn_especialistas_totales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="46dp"
            android:background="#00000000"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onMyButtonClick"
            android:text="Especialistas totales"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/image_empleadosTotales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="29dp"
            app:srcCompat="@mipmap/view_assistant_menu_paciente_image_empleadostotales" />

        <ImageButton
            android:id="@+id/imgbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="38dp"
            android:background="#00000000"
            app:srcCompat="@mipmap/opcionescita_opciones" />

        <TextView
            android:id="@+id/tv1_NumeroTotal_Empleados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/view_empleadosTotales"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="35dp"
            android:text="[Numero total]"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="181dp"
        android:layout_height="142dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="128dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <View
            android:id="@+id/view_pacientesTotales"
            android:layout_width="153dp"
            android:layout_height="135dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/drawable_assistant_menu_asistente_view1" />

        <ImageView
            android:id="@+id/image_pcienteTotales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="29dp"
            app:srcCompat="@mipmap/view_assistant_menu_paciente_image_pacientetotales" />

        <ImageButton
            android:id="@+id/imgbtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="38dp"
            android:background="#00000000"
            app:srcCompat="@mipmap/opcionescita_opciones" />

        <TextView
            android:id="@+id/tv1_NumeroTotal_Paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/view_pacientesTotales"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="35dp"
            android:text="[Numero total]"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_pacientes_totales"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="46dp"
            android:background="#00000000"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onMyButtonClick"
            android:text="Pacientes totales"
            android:textColor="@color/black"
            android:textSize="12dp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_accedioRecientemente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="236dp"
        android:text="Accedido recientemente"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_nombreAsistente" />

    <RelativeLayout
        android:id="@+id/relativeLayout8"
        android:layout_width="352dp"
        android:layout_height="131dp"
        android:layout_marginBottom="248dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toStartOf="parent">


        <View
            android:id="@+id/view_registrar_paciente"
            android:layout_width="319dp"
            android:layout_height="112.45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/drawable_patient_agendar_cita_view" />

        <ImageButton
            android:id="@+id/imageView"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/view_registrar_paciente"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="274dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            app:srcCompat="@mipmap/opcionescita_agendar" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="82dp"
            android:text="Registrar paciente"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="37dp"
            android:background="#00FFFFFF"
            android:src="@mipmap/opcionescita_opciones" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="357dp"
        android:layout_height="148dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.703"
        app:layout_constraintStart_toStartOf="parent">


        <View
            android:id="@+id/view_citasCancelarPendientes"
            android:layout_width="319dp"
            android:layout_height="112.45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/drawable_assistant_menu_asistente_view1" />

        <ImageButton
            android:id="@+id/imgcancelar"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_alignStart="@+id/view_citasCancelarPendientes"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="268dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            app:srcCompat="@mipmap/opcionescita_cancelar" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="82dp"
            android:text="Citas a cancelar"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="41dp"
            android:background="#00FFFFFF"
            android:src="@mipmap/opcionescita_opciones" />


    </RelativeLayout>

    <ImageButton
        android:id="@+id/img_fotoperfil_asistente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="28dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ajustesdecuenta_profile" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center">

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="288dp"
        android:layout_height="102dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout5">


        <View
            android:id="@+id/rectangle_15"
            android:layout_width="273dp"
            android:layout_height="86dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/drawable_patient_details_cita_paciente_regresarborder"
            android:backgroundTint="#EBF0F0" />

        <View
            android:layout_width="61dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="27dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/drawable_patient_reagendar_cita_borderhora" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="34dp"
            android:tint="#1B6AA4"
            app:srcCompat="@drawable/vectorasset_patient_calendar" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rectangle_15"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="47dp"
            android:text="Fecha de consulta" />

        <TextView
            android:id="@+id/patient_detallesCita_fecha"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="84dp"
            android:layout_marginBottom="31dp"
            android:text="--.--.----"
            android:textColor="#0E1012"
            android:textStyle="bold" />


    </RelativeLayout>

    <View
        android:id="@+id/view_pricipal"
        android:layout_width="413dp"
        android:layout_height="161dp"
        android:background="#1C6BA4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="296dp"
        android:layout_height="109dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003">


        <view
            android:id="@+id/view"
            class="androidx.appcompat.widget.ActionMenuView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/drawable_patient_details_cita_paciente_view" />

        <ImageView
            android:id="@+id/FotoPerfil"
            android:layout_width="68dp"
            android:layout_height="75dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@mipmap/view_doctor_patient_ajustesdecuenta_profile" />

        <TextView
            android:id="@+id/admin_detallesCitaNombre"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="67dp"
            android:text="[Nombre usuario]"
            android:textColor="#0E1012"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dotor_detallesCitaMatricula"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="39dp"
            android:text="Status de cita" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="288dp"
        android:layout_height="102dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv7"
        app:layout_constraintVertical_bias="0.0">


        <View
            android:layout_width="273dp"
            android:layout_height="86dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/drawable_patient_details_cita_paciente_regresarborder"
            android:backgroundTint="#EBF0F0" />

        <View
            android:layout_width="61dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="27dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/drawable_patient_reagendar_cita_borderhora" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="34dp"
            app:srcCompat="@mipmap/view_patient_reagendar_citas2_reloj" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rectangle_15"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="47dp"
            android:text="Hora de consulta" />

        <TextView
            android:id="@+id/patient_detallesCita_hora"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="84dp"
            android:layout_marginBottom="31dp"
            android:text="--:--"
            android:textColor="#0E1012"
            android:textStyle="bold" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/ivBackBtnDetallesCitaPatient"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:tint="#FFFFFF"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/vectorasset_general_back"
        app:layout_constraintEnd_toEndOf="@+id/view_pricipal"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="104dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="72dp"
        android:text="Detalles"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/ivBackBtnDetallesCitaPatient"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="324dp"
        android:layout_height="130dp"
        android:layout_marginStart="28dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43">

        <TextView
            android:id="@+id/patient_detallesCita_folio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Fólio:"
            android:textColor="#4A545E"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/patient_detallesCita_medico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Médico:"
            android:textColor="#4A545E"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/patient_detallesCita_motivo"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginBottom="40dp"
            android:text="Motivo de su cita:"
            android:textColor="#4A545E"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="195dp"
        android:layout_height="29dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="128dp"
        android:text="Detalles de la cita:"
        android:textSize="20dp"
        android:textColor="#0E1012"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout4"
        app:layout_constraintVertical_bias="0.086" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="288dp"
        android:layout_height="39dp"
        android:text="Hora en la que tendrá su cita"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.04000002" />


</androidx.constraintlayout.widget.ConstraintLayout>
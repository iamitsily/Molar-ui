<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.doctor.controller_doctor_TerminosCondiciones">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="650dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_title_politicasprivacidad2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="401dp"
                android:layout_height="wrap_content"
                android:text="Propiedad intelectual"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Esta aplicación es propiedad de HAKU y está protegida por las leyes de propiedad intelectual. Queda prohibido cualquier uso no autorizado de los contenidos de esta aplicación." />

            <TextView
                android:id="@+id/admin_detallesCitaNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uso de la aplicación"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Esta aplicación está diseñada para ayudar en la gestión de consultorios dentales. El uso de esta aplicación es responsabilidad del usuario, quien se compromete a utilizarla de forma legal y ética. Se prohíbe el uso de esta aplicación para fines ilegales o fraudulentos."
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacidad"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Esta aplicación recopila cierta información personal del usuario, incluyendo nombre, correo electrónico y número de teléfono. Esta información será utilizada únicamente para proporcionar los servicios de la aplicación y no será compartida con terceros sin el consentimiento del usuario." />

            <TextView
                android:id="@+id/dotor_detallesCitaMatricula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actualización de la aplicación"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Esta aplicación puede actualizarse de vez en cuando para corregir errores o mejorar la funcionalidad. El usuario acepta recibir estas actualizaciones y se compromete a actualizar la aplicación cuando se le notifique." />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Limitación de responsabilidad "
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemNotificacionesPatient_dia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La empresa HAKU no se hace responsable de los daños directos o indirectos que puedan surgir del uso de esta aplicación. El usuario utiliza esta aplicación bajo su propio riesgo y es responsable de cualquier pérdida o daño que pueda sufrir." />

            <TextView
                android:id="@+id/itemNotificacionesPatient_mes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modificación de los términos y condiciones "
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La empresa HAKU se reserva el derecho de modificar estos términos y condiciones en cualquier momento. El usuario será notificado de dichas modificaciones y deberá aceptarlos para seguir utilizando la aplicación." />

            <TextView
                android:id="@+id/itemNotificacionesPatient_mensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Al utilizar esta aplicación, el usuario acepta estos términos y condiciones en su totalidad. Si no está de acuerdo con alguno de estos términos, no utilice esta aplicación."
                android:textAlignment="center"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/admin_title_politicasprivacidad2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Politicas de Privacidad"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.308"
        app:layout_constraintStart_toEndOf="@+id/doctor_menu_idBackBtnTerminosCondiciones"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <ImageButton
        android:id="@+id/doctor_menu_idBackBtnTerminosCondiciones"
        android:layout_width="45dp"
        android:layout_height="36dp"
        android:background="#03FFFFFF"
        android:onClick="backBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        app:srcCompat="@mipmap/reegresarboton" />
</androidx.constraintlayout.widget.ConstraintLayout>
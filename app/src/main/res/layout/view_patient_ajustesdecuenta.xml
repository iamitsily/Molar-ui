<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/rectangle_541"
        android:layout_width="417dp"
        android:layout_height="310dp"
        android:background="@drawable/drawable_ajustesdecuenta_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="46dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/drawable_ajustesdecuenta_regresar"
        android:onClick="backCuentaMenuBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/regresar" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Ajustes de cuenta"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toEndOf="@+id/imageButton4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Configura tu perfil"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:text="Actualice su perfil para conectar a su médico con mejor impresión. "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="102dp"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/view_doctor_patient_ajustesdecuenta_profile" />

    <ImageButton
        android:id="@+id/imageButton_redondo"
        android:layout_width="34dp"
        android:layout_height="32dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="132dp"
        android:background="@drawable/drawable_ajustesdecuenta_cambiarfoto"
        android:src="@mipmap/ajustesdecuenta_cambiar_foto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="224dp"
        android:layout_height="31dp"
        android:layout_marginTop="12dp"
        android:text="Información personal:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_541" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Número de télefono:"
                android:textColor="#1C6BA4" />

            <EditText
                android:id="@+id/view_patient_ajustesCuentaTelefono"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/drawable_ajustesdecuenta_profile"
                android:hint="+52 "
                android:inputType="number"
                android:maxLength="10"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Correo electrónico : "
                android:textColor="#1C6BA4" />

            <EditText
                android:id="@+id/view_patient_ajustesCuentaEmail"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/drawable_ajustesdecuenta_profile"
                android:hint="example@.com"
                android:inputType="textEmailAddress"
                android:paddingRight="10dp" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Contraseña actual"
                android:textColor="#1C6BA4" />

            <EditText
                android:id="@+id/view_patient_ajustesCuentaPasswordActual"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/drawable_ajustesdecuenta_profile"
                android:drawableRight="@mipmap/login_layaut_ocultar"
                android:inputType="textPassword"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Nueva contraseña:"
                android:textColor="#1C6BA4" />

            <EditText
                android:id="@+id/view_patient_ajustesCuentaPassword"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/drawable_ajustesdecuenta_profile"
                android:drawableRight="@mipmap/login_layaut_ocultar"
                android:inputType="textPassword"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Confirmar contraseña:"
                android:textColor="#1C6BA4" />

            <EditText
                android:id="@+id/view_patient_ajustesCuentaConfirmedPassword"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/drawable_ajustesdecuenta_profile"
                android:drawableRight="@mipmap/login_layaut_ocultar"
                android:inputType="textPassword"
                android:paddingRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <Button
                    android:id="@+id/view_patient_ajustesCuentaGuardarBtn"
                    android:layout_width="262dp"
                    android:layout_height="51dp"
                    android:background="@drawable/drawable_roundedbutton_general"
                    android:backgroundTint="#1C6BA4"
                    android:gravity="center"
                    android:text="Guardar"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>